{
  "name": "docs",
  "module": "index.ts",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/fs-extra": "^11.0.4",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.3",
    "handlebars": "^4.7.8",
    "nodemon": "^3.1.10"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun run clean && bun run scripts/build-markdown.ts && cd site && zensical build --clean && python postprocess.py",
    "clean": "/bin/rm -rf site/static/markdown/* && /bin/rm -rf site/static/html/*",
    "watch": "bunx nodemon",
    "build:oscal": "bun run scripts/build-oscal.ts"
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "./site/content/**/*",
      "./templates/zensical-template.hbs",
      "../FRMR*.json"
    ],
    "ext": "ts,md,json,hbs",
    "delay": "200",
    "exec": "bun run scripts/build-markdown.ts"
  }
}